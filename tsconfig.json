{
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "es6"
  },
  "include": [
    "tests/ts/**/*.ts"
  ]
}
